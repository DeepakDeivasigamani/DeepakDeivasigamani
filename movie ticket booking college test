def timing():
    time1 = {
        "1": "10.00-1.00",
        "2": "1.10-4.10",
        "3": "4.20-7.20",
        "4": "7.30-10.30"
    }
    time2 = {
        "1": "10.15-1.15",
        "2": "1.25-4.25",
        "3": "4.35-7.35",
        "4": "7.45-10.45"
    }
    time3 = {
        "1": "10.30-1.30",
        "2": "1.40-4.40",
        "3": "4.50-7.50",
        "4": "8.00-10.45"
    }
    print("1.time1")
    print("2.time2")
    print("3.time3")
    a=int(input("choose your time"))
    global x
    if a == 1:
        print(time1)
        t = input("select your show time:")
        x = time1[t]
        print("       successfull!, enjoy movie at "+x)
        print("please select your seats")
    elif a == 2:
        print(time2)
        t = input("select your show time:")
        x = time2[t]
        print("       successfull!, enjoy movie at "+x)
        print("please select your seats")
    elif a == 3:
        print(time3)
        t = input("select your show time:")
        x = time3[t]
        print("       successfull!, enjoy movie at "+x    )
        print("please select your seats")
    






def seat_booking():
  available_seats = ['1a', '2a', '19b', '20b', '21e', '13g','14g', '15f', '14f' ,'18k']
  print("Welcome To The Seat Booking Portal!")
  while True:
        global seats
        seats = []
        global wanted_seats
        wanted_seats=int(input("\nHow many seats do you want to book now: ")) 
        if wanted_seats > len(available_seats):
            print("\nI'm sorry, we only have {len(available_seats)} "
                "seats available")
            print("--Please try again--")
            continue
        while True: 
            print("\nHere are the available seats:")
            for seat in available_seats:
                print(seat)
            seat = input("\nPlease enter the number of the seat you would like to book: ")
            if seat in available_seats:
                available_seats.remove(seat)
            else:
                print("--I'm sorry you have chosen an invalid seat--"
                    "\n-Please try again-")
                continue
            seats.append(seat)
            if wanted_seats > 1:
                print("\nYou can now choose another seat.")
                wanted_seats-=1
                continue
            else:
                break
        if available_seats:
         go_again = input("Would you like to let someone else book their tickets? (1.yes/2.no) ")
         if go_again == 2:
                break
         else:
             break 
           
  payment()
